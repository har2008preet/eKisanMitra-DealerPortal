<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FF0099CC">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wolverine.btp_vendor.fertRegis">



    <LinearLayout
        android:id="@+id/LLF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginTop="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Dealer Type:"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/dealer_TypeMach"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:entries="@array/dealerType"
                android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Dealer Mobile:"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/dealer_MobileMach"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Dealer's Village:"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/dealer_VillageMach"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingLeft="5dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Dealer's Address:"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/dealer_addresslineMach"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Dealer Website:"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/dealer_WebMach"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>
        </LinearLayout>
        <Button
            android:id="@+id/registerMach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Register"
            android:onClick="machvendregis"
            />
    </LinearLayout>


</RelativeLayout>
</ScrollView>